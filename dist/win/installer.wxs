            <File Source='$(var.InstallRoot)\tiled.exe' KeyPath='yes' Checksum='yes'>
              <Shortcut Id="startmenuTiled" Directory="ProgramMenuFolder" Name="Tiled" WorkingDirectory='INSTALLDIR' Icon="tiled.exe" IconIndex="0" Advertise="yes" />
